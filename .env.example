# ===========================================
# NEØ.FLOWOFF Landing - Environment Variables
# ===========================================

# --------------------------------------------
# FlowPay / Woovi Gateway (PIX Payment)
# --------------------------------------------
# Woovi API Configuration
WOOVI_API_KEY=your_woovi_api_key_here
WOOVI_WEBHOOK_SECRET=your_woovi_webhook_secret_here
WOOVI_API_URL=https://api.woovi.com

# FlowPay API Configuration
FLOWPAY_API_URL=https://flowpay-production-10d8.up.railway.app
FLOWPAY_API_KEY=your_flowpay_api_key_here
FLOWPAY_SIGNATURE_SECRET=your_flowpay_signature_secret_here

# Token Secret (para assinatura de tokens)
TOKEN_SECRET=your_token_secret_here

# Legacy OpenPix (compatibilidade)
OPENPIX_API_KEY=your_openpix_api_key_here

# --------------------------------------------
# Telegram Integration
# --------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --------------------------------------------
# Analytics & Tracking
# --------------------------------------------
# Google Tag Manager ID
GTM_ID=GTM-XXXXXXX

# Google Analytics 4 Measurement ID
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# --------------------------------------------
# WhatsApp Integration
# --------------------------------------------
# Número principal de contato (formato: +5562983231110)
WHATSAPP_CONTACT=+5562983231110

# --------------------------------------------
# Email & Notifications
# --------------------------------------------
# Email principal para contato LGPD
CONTACT_EMAIL=neo@neoprotocol.space

# SMTP Config (se houver envio de emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_smtp_password

# --------------------------------------------
# AI Services
# --------------------------------------------
# Anthropic (Claude AI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ASI1AI API Key
ASI1AI_API_KEY=your_asi1ai_api_key_here

# --------------------------------------------
# IPFS / Pinata
# --------------------------------------------
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here
PINATA_JWT_SECRET=your_pinata_jwt_secret_here
PINATA_GATEWAY_URL=https://your-gateway.mypinata.cloud

# --------------------------------------------
# Lighthouse (IPFS Alternative)
# --------------------------------------------
LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# --------------------------------------------
# NEO Protocol
# --------------------------------------------
# Skills Registry Index CID (IPFS)
NEO_INDEX_CID=your_neo_index_cid_here

# --------------------------------------------
# Site Configuration
# --------------------------------------------
# Site URL (para Open Graph, Canonical URLs, etc)
SITE_URL=https://flowoff.xyz

# Deploy Environment
NODE_ENV=production

# --------------------------------------------
# Security
# --------------------------------------------
# Session Secret (se houver backend com sessões)
SESSION_SECRET=your_random_session_secret_here

# CORS Allowed Origins (separados por vírgula)
CORS_ORIGINS=https://flowoff.xyz,https://www.flowoff.xyz

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Habilitar FlowPay checkout
ENABLE_FLOWPAY=true

# Habilitar modo debug
DEBUG_MODE=false
